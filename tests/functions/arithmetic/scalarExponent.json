{
  "name": "Scalar exponent function test",
  "version": 2,
  "process": [
    {
      "desc": "integer with matrix",
      "config": {},
      "tests": [
        {
          "input": ["2.^[1,2;3,4]"],
          "type": "equals",
          "output": "[2,4;8,16]"
        },
        {
          "input": ["[1,2;3,4].^2"],
          "type": "equals",
          "output": "[1,4;9,16]"
        }
      ]
    },
    {
      "desc": "matrix with matrix",
      "config": {},
      "tests": [
        {
          "input": ["[2,3].^[-1,0]"],
          "type": "equals",
          "output": "[1/2,1]"
        },
        {
          "input": ["[1,2].^[0;3]"],
          "type": "throws",
          "output": "error:invalidMatrixDimensions"
        }
      ]
    },
    {
      "desc": "matrix with rational",
      "config": {},
      "tests": [
        {
          "input": ["[1/2,1/3,1/5].^(-1)"],
          "type": "equals",
          "output": "[2,3,5]"
        }
      ]
    }
  ]
}
